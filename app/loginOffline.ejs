<div id="loginOfflineContainer" style="display: none;">
    <div id="loginOfflineCancelContainer" style="display: none;">
        <button id="loginOfflineCancelButton">
            <div id="loginOfflineCancelIcon">X</div>
            <span id="loginOfflineCancelText"><%- lang('loginOffline.cancelText') %></span>
        </button>
    </div>
    <div id="loginOfflineContent">
        <form id="loginOfflineForm">
            <img id="loginOfflineImageSeal" src="assets/images/icons/Pirata.png" style="width: 150px; height: 150px;"/>
            <span id="loginOfflineSubheader"><%- lang('loginOffline.subheader') %></span>
            <div class="loginFieldContainer">
                <svg id="profileSVG" class="loginSVG" viewBox="40 37 65.36 61.43">
                    <g>
                        <path d="M86.77,58.12A13.79,13.79,0,1,0,73,71.91,13.79,13.79,0,0,0,86.77,58.12M97,103.67a3.41,3.41,0,0,0,3.39-3.84,27.57,27.57,0,0,0-54.61,0,3.41,3.41,0,0,0,3.39,3.84Z"/>
                    </g>
                </svg>
                <span class="loginErrorSpan" id="loginOfflineUsernameError"><%- lang('loginOffline.usernameError') %></span>
                <input id="loginOfflineUsername" class="loginField" type="text" placeholder="<%- lang('loginOffline.usernamePlaceholder') %>" maxlength="16"/>
            </div>
            <button id="loginOfflineButton" disabled>
                <div id="loginOfflineButtonContent">
                    <%- lang('loginOffline.loginButtonText') %>
                    <svg id="loginSVG" viewBox="0 0 24.87 13.97">
                        <defs>
                            <style>.arrowLine{fill:none;stroke:#FFF;stroke-width:2px;transition: 0.25s ease;}</style>
                        </defs>
                        <polyline class="arrowLine" points="0.71 13.26 12.56 1.41 24.16 13.02"/>
                    </svg>
                    <div class="circle-loader">
                        <div class="checkmark draw"></div>
                    </div>
                </div>
            </button>
            <div id="loginOfflineDisclaimer">
                <p class="loginDisclaimerText"><%- lang('loginOffline.disclaimer1') %></p>
                <p class="loginDisclaimerText"><%- lang('loginOffline.disclaimer2') %></p>
            </div>
        </form>
    </div>
    <script src="./assets/js/scripts/loginOffline.js"></script>
</div>
